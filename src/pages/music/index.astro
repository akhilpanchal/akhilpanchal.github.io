---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Discography from '../../components/Discography.astro';
import { getOriginalSongs, getCoverSongs } from '../../data/discography';

// Get categorized videos
const originalSongs = getOriginalSongs();
const coverSongs = getCoverSongs();
---

<BaseLayout title="Music">
  <main class="flex-1 max-w-4xl mx-auto px-4 py-12 w-full">
    <h1 class="text-4xl font-bold mb-8">Music</h1>
    
    <!-- Discography Section -->
    <div class="mb-16">
      <!-- Original Songs -->
      {originalSongs.length > 0 && (
        <div class="mb-12">
          <Discography 
            videos={originalSongs}
            title="Originals"
            description="Original music and collaborations"
          />
        </div>
      )}
      
      <!-- Cover Songs -->
      {coverSongs.length > 0 && (
        <div class="mb-12">
          <Discography 
            videos={coverSongs}
            title="Live Covers"
            description="Live cover performances and tributes"
          />
        </div>
      )}
    </div>
  </main>
</BaseLayout>
