---
interface Props {
  title: string;
  date: Date;
  slug: string;
  tags?: string[];
  excerpt?: string;
}

const { title, date, slug, tags, excerpt } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric',
}).format(date);
---

<article class="border-b border-gray-200 dark:border-gray-800 pb-8 mb-8 last:border-b-0">
  <a href={slug} class="group">
    <h2 class="text-2xl font-bold mb-2 group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors">
      {title}
    </h2>
  </a>
  
  <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 mb-3">
    <time datetime={date.toISOString()}>{formattedDate}</time>
    {tags && tags.length > 0 && (
      <>
        <span>•</span>
        <div class="flex gap-2">
          {tags.map((tag) => (
            <span class="text-blue-500 dark:text-blue-400">#{tag}</span>
          ))}
        </div>
      </>
    )}
  </div>
  
  {excerpt && (
    <p class="text-gray-700 dark:text-gray-300 mb-3">{excerpt}</p>
  )}
  
  <a 
    href={slug} 
    class="text-blue-500 dark:text-blue-400 hover:underline text-sm font-medium"
  >
    Read more →
  </a>
</article>
