---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';
import { Button } from "@/components/ui/button"

const allBlogPosts = await getCollection('blog');
const allMusicPosts = await getCollection('music');

// Combine all posts and sort by date descending
const allPosts = [
  ...allBlogPosts.map(post => ({ ...post, type: 'blog' })),
  ...allMusicPosts.map(post => ({ ...post, type: 'music' }))
].sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout>
  <Header />
  
  <main class="flex-1 max-w-4xl mx-auto px-4 py-16 w-full">
    <!-- Hero Section -->
    <section class="mb-16 text-center">
      <h1 class="text-5xl font-bold mb-4">Akhil Panchal</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        Software Engineer | Singer | Cycling Enthusiast
      </p>
      <div class="flex justify-center gap-4">
        <Button size="lg" as="a" href="/posts">
          Read Blog
        </Button>
        <Button size="lg" as="a" variant="outline" href="/music">
          Listen to Music
        </Button>
      </div>
    </section>
    
    <!-- All Posts -->
    <section>
      <h2 class="text-3xl font-bold mb-6">All Posts</h2>
      
      <div class="space-y-4">
        {allPosts.map((post) => {
          const slug = post.type === 'blog' ? `/posts/${post.slug}` : `/music/${post.slug}`;
          return (
            <article class="border-b border-gray-200 dark:border-gray-800 pb-4">
              <a href={slug} class="block hover:opacity-80 transition-opacity">
                <div class="flex gap-4 items-baseline">
                  <time class="text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap">
                    {new Date(post.data.date).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'short', 
                      day: 'numeric' 
                    })}
                  </time>
                  <h3 class="text-lg font-medium hover:text-blue-500 dark:hover:text-blue-400">
                    {post.data.title}
                  </h3>
                </div>
              </a>
            </article>
          );
        })}
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
