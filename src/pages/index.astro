---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { formatDateShort } from '@/lib/utils';

const allBlogPosts = await getCollection('blog');
const allMusicPosts = await getCollection('music');

// Combine all posts and sort by date descending
const allPosts = [
...allBlogPosts.map(post => ({ ...post, type: 'blog' })),
...allMusicPosts.map(post => ({ ...post, type: 'music' }))
].sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout>
  <main class="flex-1 max-w-4xl mx-auto px-4 py-16 w-full">
    <!-- Hero Section -->
    <section class="mb-16 text-center">
      <h1 class="scroll-m-20 text-center text-4xl font-extrabold tracking-tight text-balance">
        Akhil Panchal
      </h1>

      <p class="text-xl text-muted-foreground mb-8">
        Software Engineer | Singer | Runner
      </p>
    </section>

    <!-- All Posts -->
    <section>
      <h2 class="text-3xl font-bold mb-6">All Posts</h2>

      <div class="space-y-4">
        {allPosts.map((post) => {
        const slug = post.type === 'blog' ? `/posts/${post.slug}` : `/music/${post.slug}`;
        return (
        <article class="border-b border-border pb-4">
          <a href={slug} class="block hover:opacity-80 transition-opacity">
            <div class="flex gap-4 items-baseline">
              <time class="text-sm text-muted-foreground whitespace-nowrap">
                {formatDateShort(new Date(post.data.date))}
              </time>
              <h3 class="text-lg font-medium hover:text-primary">
                {post.data.title}
              </h3>
            </div>
          </a>
        </article>
        );
        })}
      </div>
    </section>
  </main>
</BaseLayout>