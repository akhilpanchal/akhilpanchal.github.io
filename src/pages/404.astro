---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="404 - Page Not Found">
  <Header />
  
  <main class="flex-1 max-w-4xl mx-auto px-4 py-16 w-full flex flex-col items-center justify-center">
    <h1 class="text-6xl font-bold mb-4">404</h1>
    <p class="text-2xl text-muted-foreground mb-8">Page not found</p>
    <a 
      href="/" 
      class="px-6 py-3 bg-primary text-primary-foreground rounded-lg hover:opacity-90 transition-opacity"
    >
      Go Home
    </a>
  </main>
  
  <Footer />
</BaseLayout>
