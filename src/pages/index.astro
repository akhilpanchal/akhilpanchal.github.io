---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allBlogPosts = await getCollection('blog');
const allMusicPosts = await getCollection('music');

// Combine all posts and sort by date descending
const allPosts = [
  ...allBlogPosts.map(post => ({ ...post, type: 'blog' })),
  ...allMusicPosts.map(post => ({ ...post, type: 'music' }))
].sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout>
  <main class="flex-1 max-w-4xl mx-auto px-4 py-16 w-full">
    <!-- Hero Section -->
    <section class="mb-16 text-center">
    <h1 class="scroll-m-20 text-center text-4xl font-extrabold tracking-tight text-balance">
      Akhil Panchal
    </h1>

      <p class="text-xl text-muted-foreground mb-8">
        Software Engineer | Singer | Runner
      </p>
      <div class="flex justify-center gap-4">
        <a href="/posts" class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring bg-primary text-primary-foreground shadow hover:bg-primary/90 h-10 px-8">
          Read Blog
        </a>
        <a href="/music" class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring bg-primary text-primary-foreground shadow hover:bg-primary/90 h-10 px-8">
          Listen to Music
        </a>
      </div>
    </section>
    
    <!-- All Posts -->
    <section>
      <h2 class="text-3xl font-bold mb-6">All Posts</h2>
      
      <div class="space-y-4">
        {allPosts.map((post) => {
          const slug = post.type === 'blog' ? `/posts/${post.slug}` : `/music/${post.slug}`;
          return (
            <article class="border-b border-border pb-4">
              <a href={slug} class="block hover:opacity-80 transition-opacity">
                <div class="flex gap-4 items-baseline">
                  <time class="text-sm text-muted-foreground whitespace-nowrap">
                    {new Date(post.data.date).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'short', 
                      day: 'numeric' 
                    })}
                  </time>
                  <h3 class="text-lg font-medium hover:text-primary">
                    {post.data.title}
                  </h3>
                </div>
              </a>
            </article>
          );
        })}
      </div>
    </section>
  </main>
</BaseLayout>
